{
  "compilerOptions": {
    "target": "ES2020",                                  
    "lib": ["ESNext"],                                        
    "module": "CommonJS",    

    "rootDir": "./src",                                  
    "moduleResolution": "NodeNext",                       
    "baseUrl": "./",                                  
    "paths": {
			"@fastify/awilix/classic" : ["./node_modules/@fastify/awilix/lib/classic"],

			"#routes/*" : ["src/routes/*"],
			"#lib/*" : ["src/lib/*"],
			"#core/*" : ["src/core/*"],
			"#shared/*" : ["src/shared/*"],
		},                                      
    "outDir": "./dist",                                   
    
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false,

		"removeComments": true,                           
    "importHelpers": true,                            
    "importsNotUsedAsValues": "error",               
    "noEmitOnError": true,                            
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                      
    "noFallthroughCasesInSwitch": true,               
    "noImplicitOverride": true,                       
    "skipDefaultLibCheck": true,                      
    "skipLibCheck": true                                 
  },
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "dist", "docs", "examples", "tests"],
}
